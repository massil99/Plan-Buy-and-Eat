<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageButton
        android:id="@+id/btn_back_from_settings"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:src="@drawable/ic_arrow_back"/>
    <TextView
        android:text="@string/parametre"
        style="@style/Theme.PlanBuyAndEat.activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/periode_de_shopping"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editview_period"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>
    </LinearLayout>
    <View style="@style/Divider"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
       <TextView
            android:text="@string/date_de_debut"
            android:layout_weight="0.9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
       <Button
            android:id="@+id/btn_modifierDateDebutPeriode"
            android:text="@string/modifer_date"
            android:layout_weight="0.1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/nb_plats_pjour"
            android:layout_marginEnd="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editview_nbPlatPjour"
            android:inputType="number"
            android:layout_width="50dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>