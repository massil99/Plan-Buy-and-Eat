<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:gravity="center"
    android:weightSum="1">
    <LinearLayout
        android:background="@drawable/from_card"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center">
        <ImageView
            android:src="@mipmap/ic_icon_foreground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="2dp"/>
        <TextView
            android:text="@string/Signup"
            style="@style/Theme.PlanBuyAndEat.activityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:text="@string/prenom"
                style="@style/Theme.PlanBuyAndEat.intputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editview_prenom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="@string/nom"
                style="@style/Theme.PlanBuyAndEat.intputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editview_nom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/nomUtilisateur"
                style="@style/Theme.PlanBuyAndEat.intputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editview_nomUtilisateur_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="@string/mdp"
                style="@style/Theme.PlanBuyAndEat.intputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editview_mdp_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>


            <TextView
                android:text="@string/mdpx"
                style="@style/Theme.PlanBuyAndEat.intputLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editview_mdpx"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_signup_error"
            style="@style/Theme.PlanBuyAndEat.errorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_register"
            android:text="@string/register"
            style="@style/Theme.PlanBuyAndEat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>